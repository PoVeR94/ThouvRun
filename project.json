{
  "project": {
    "name": "Thouv'Run",
    "version": "1.0.0",
    "description": "A 2D platformer game where you run away to CSND while avoiding cars and collecting bedos!",
    "author": "Bobes Dev",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/bobes-dev/thouv-run.git"
    }
  },
  "game": {
    "title": "Thouv'Run",
    "genre": "Platformer",
    "platforms": ["Windows", "Linux", "macOS"],
    "versions": [
      {
        "name": "Graphique",
        "engine": "Pygame",
        "file": "main_graphique.py",
        "launcher": "Thouv-Run-Graphique.bat"
      },
      {
        "name": "Terminal",
        "engine": "Curses",
        "file": "main_terminal.py",
        "launcher": "Thouv-Run-Terminal.bat"
      }
    ]
  },
  "leaderboard": {
    "name": "Thouv Leaderboard",
    "type": "Web-based Real-time",
    "api": {
      "server": "Flask",
      "port": 5000,
      "baseUrl": "http://localhost:5000",
      "endpoints": [
        "GET /api/scores",
        "POST /api/scores",
        "GET /api/stats",
        "GET /api/player/{name}"
      ]
    },
    "frontend": {
      "technology": "HTML5/CSS3/JavaScript",
      "file": "scores.html",
      "launcher": "Thouv-Leaderboard.bat",
      "features": [
        "Real-time search",
        "Dynamic sorting",
        "Auto-refresh every 10 seconds",
        "Responsive design",
        "Rankings with medals"
      ]
    }
  },
  "dependencies": {
    "runtime": {
      "python": ">=3.7",
      "pygame": "2.6.1",
      "windows-curses": "2.4.1",
      "flask": "3.0.0",
      "flask-cors": "4.0.0",
      "requests": "2.31.0"
    },
    "development": {
      "pytest": "^7.0",
      "flake8": "^5.0",
      "black": "^22.0",
      "pre-commit": "^2.0"
    }
  },
  "documentation": [
